{% extends "layout.twig" %}

{% block conteudo %}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<table class="table table-hover table-condensed table-bordered">
				<thead>
					<tr>
						<th>
							#id
						</th>
						<th>
							Questao
						</th>
						<th>
							pontos
						</th>
						<th>
							Status
						</th>
						<th>
							Ação
						</th>
					</tr>
				</thead>
				<tbody>
						
					{% for item in dadosQuestoes %}
						<tr class="{{ item.status == "Resolvida" ? "success" : "" }}">
							<td>
								{{item.id}}
							</td>
							<td>
								{{item.titulo}}
							</td>
							<td>
								{{item.pontos}}
							</td>
							<td>
								{{item.status}}
							</td>
							<td>
								<a href="/questao/{{item.id}}">Resolver</a>
							</td>
						</tr>

					{% endfor %}

				</tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}