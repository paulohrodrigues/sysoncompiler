{% block head %}

	<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>Flot Examples: Categories</title>
	<link href="{{base_url()}}/assets/css/examples.css" rel="stylesheet" type="text/css">
	<script language="javascript" type="text/javascript" src="{{base_url()}}/assets/js/jquery.js"></script>
	<script language="javascript" type="text/javascript" src="{{base_url()}}/assets/js/jquery.flot.js"></script>
	<script language="javascript" type="text/javascript" src="{{base_url()}}/assets/js/jquery.flot.categories.js"></script>
	<script type="text/javascript">

	$(function() {
		var data=[];

		{% for dados in item %}
			var data.push(["{{item.mes}}","{{item.valor}}"]);
		{% endfor %}

		$.plot("#placeholder", [ data ], {
			series: {
				bars: {
					show: true,
					barWidth: 0.6,
					align: "center"
				}
			},
			xaxis: {
				mode: "categories",
				tickLength: 0
			}
		});

		// Add the Flot version string to the footer

		$("#footer").prepend("Flot " + $.plot.version + " &ndash; ");
	});

	</script>
</head>



{% endblock %}


