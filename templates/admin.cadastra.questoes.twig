{% extends "layout.twig" %}

{% block conteudo %}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="jumbotron">

			<form action="cadastroDeQuestoes" method="post">
			    {{htmlHidden.html | raw}}
			    <div class="form-group">
			      <label for="texto">Titulo</label>
			      <input type="text" name="titulo" class="form-control" placeholder="Titulo">
			    </div>

			    <div class="form-group">
			      <label for="texto">Descrição</label>
			      <input type="text" name="descricao" class="form-control" placeholder="Descrição">
			    </div>
			    
			    <div class="form-group">
			      <label for="texto">Descrição de Entrada</label>
			      <input type="text" name="descricaoDeEntrada" class="form-control" placeholder="Descrição de Entrada">
			    </div>

			    <div class="form-group">
			      <label for="texto">Descrição de Saida</label>
			      <input type="text" name="descricaoDeSaida" class="form-control" placeholder="Descrição de Saida">
			    </div>

			    <div class="form-group">
			      <label for="texto">Entrada</label>
			      <input type="text" name="entrada" class="form-control" placeholder="Entrada">
			    </div>

			    <div class="form-group">
			      <label for="texto">Saida</label>
			      <input type="text" name="saida" class="form-control" placeholder="Saida">
			    </div>

			    <div class="form-group">
			      <label for="texto">Demo Entrada</label>
			      <input type="text" name="demoEntrada" class="form-control" placeholder="Demo Entrada">
			    </div>

			    <div class="form-group">
			      <label for="texto">Demo Saida</label>
			      <input type="text" name="demoSaida" class="form-control" placeholder="Demo Saida">
			    </div>

			    <div class="form-group">
			      <label for="texto">Pontos</label>
			      <input type="text" name="pontos" class="form-control" placeholder="Pontos">
			    </div>

			    <button type="submit" class="btn btn-default">Cadastrar</button>
			</form>


			</div>
		</div>
	</div>
</div>

{% endblock %}

